<!--View Details-->
<table class="table table-hover" style="margin:auto; text-align: center;">
    <thead>
      <tr>
        <th scope="col">Sl. No</th>
        <th scope="col">Reason</th>
        <th scope="col">Amount</th>
        <th scope="col">Date</th>
      </tr>
    </thead>
    <tbody>
      <% if(user.expense.length >0){%>
        <% for (var i =1; i <= user.expense.length;  i++ ){%>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= user.expense[i-1].reason %></td>
            <td><%= user.expense[i-1].amount %></td>
            <td><%= user.expense[i-1].date %></td>
          </tr>
        <% }; %>
      <% } else{%>
        <p style="text-align: center;">No data added yet!</p>
      <% } %>
    </tbody>
</table>


